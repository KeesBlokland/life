ALTER TABLE shopping_items ADD COLUMN list_name TEXT DEFAULT 'food';
ALTER TABLE shopping_items ADD COLUMN master_list BOOLEAN DEFAULT 0;
ALTER TABLE shopping_items ADD COLUMN today_list BOOLEAN DEFAULT 0;
ALTER TABLE shopping_items ADD COLUMN added_date TIMESTAMP;
CREATE INDEX idx_shopping_list_name ON shopping_items(list_name);
CREATE INDEX idx_shopping_master ON shopping_items(master_list);
CREATE INDEX idx_shopping_today ON shopping_items(today_list);
UPDATE shopping_items SET master_list = 1, list_name = 'food' WHERE list_name IS NULL;
.schema shopping_items
.exit
